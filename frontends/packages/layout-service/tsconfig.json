{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2017",
    "module": "commonjs",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "declaration": true,
    "newLine": "LF",
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "build"
  },
  "exclude": [
    "build",
    "node_modules",
    "**/*.test.ts"
  ]
}
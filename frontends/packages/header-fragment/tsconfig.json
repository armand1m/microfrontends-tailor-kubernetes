{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2017",
    "module": "commonjs",
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "declaration": true,
    "strictPropertyInitialization": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "build",
    "baseUrl": "src"
  },
  "exclude": [
    "node_modules"
  ]
}